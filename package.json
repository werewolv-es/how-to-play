    "acorn": "^7.1.1",
    "docz": "^2.2.0",
    "eslint-loader": "^3.0.3",
    "gatsby": "^2.20.2",
    "gatsby-plugin-offline": "^3.1.0",
    "gatsby-plugin-sharp": "^2.5.1",
    "gatsby-theme-docz": "latest",
    "gatsby-transformer-sharp": "^2.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.4",
    "react-trivial-timeline": "^1.2.2",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "pretty-quick": "^2.0.1",
    "surge": "^0.21.3"
